<Window x:Class="WPF_Projeto_BD.Views.UsuarioCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Usuário" Height="515" Width="900"
        Background="#F6F7FB"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Cadastro de Usuário"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       DockPanel.Dock="Left"/>
            <Button Content="⟵ Voltar"
                    Background="#E1E5ED"
                    Foreground="#2E2E2E"
                    BorderThickness="0"
                    Padding="10,5"
                    Width="100"
                    Cursor="Hand"
                    Click="BtnVoltar_Click"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Modo de cadastro -->
                <TextBlock Text="Escolha o modo de cadastro"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#4A90E2"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton x:Name="rbManual" Content="Manual" IsChecked="True" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbPadrao" Content="Automático (por funcionário)" />
                </StackPanel>

                <!-- Manual -->
                <StackPanel x:Name="spManual">
                    <TextBlock Text="Preencha os dados manualmente" 
                               FontSize="16" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,10"/>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Nome" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="txtNomeUsuario" FontSize="16" Margin="0,2,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Email" FontSize="14" FontWeight="Bold"/>
                        <TextBox x:Name="txtEmailUsuario" FontSize="16" Margin="0,2,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Senha" FontSize="14" FontWeight="Bold"/>
                        <PasswordBox x:Name="txtSenhaUsuario" FontSize="16" Margin="0,2,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tipo de Usuário" FontSize="14" FontWeight="Bold"/>
                        <ComboBox x:Name="cmbTipoUsuario" FontSize="16" Margin="0,2,0,0">
                            <ComboBoxItem Content="funcionario"/>
                            <ComboBoxItem Content="admin"/>
                        </ComboBox>
                    </StackPanel>
                    <Button Content="Salvar Usuário Manual"
                            Width="180" Height="40"
                            Background="#3B82F6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnSalvarManual_Click"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,30"/>
                </StackPanel>

                <!-- Automático -->
                <StackPanel x:Name="spPadrao" Visibility="Collapsed">
                    <TextBlock Text="Selecione os funcionários para gerar usuários"
                               FontSize="16" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,10"/>
                    <Border Background="White" CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1" Padding="10" Height="250" Margin="0,0,0,20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="icFuncionariosParaGerar">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Nome}" Tag="{Binding Id}" FontSize="16" Margin="5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    <Button Content="Gerar Usuários Selecionados"
                            Width="220" Height="40"
                            Background="#10B981"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnGerarPadrao_Click"
                            HorizontalAlignment="Left"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
