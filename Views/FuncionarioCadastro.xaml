<Window x:Class="WPF_Projeto_BD.Views.FuncionarioCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastrar Funcionário"
        Height="650" Width="800"
        Background="#F6F7FB"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="25">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Cadastrar Funcionário"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       DockPanel.Dock="Left"/>
            <Button Content="⟵ Voltar"
                    Background="#E1E5ED"
                    Foreground="#2E2E2E"
                    BorderThickness="0"
                    Padding="10,5"
                    Width="100"
                    Cursor="Hand"
                    Click="BtnVoltar_Click"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White"
                    CornerRadius="12"
                    BorderBrush="#E1E5ED"
                    BorderThickness="1"
                    Padding="30"
                    Width="600"
                    HorizontalAlignment="Center">

                <StackPanel>

                    <!-- Dados do Funcionário -->
                    <TextBlock Text="Dados do Funcionário"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#4A90E2"
                               Margin="0,0,0,20"/>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Nome" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBox x:Name="txtNomeFuncionario" FontSize="16" Foreground="#555" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="CPF" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBox x:Name="txtCPF" FontSize="16" Foreground="#555" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Cargo" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBox x:Name="txtCargo" FontSize="16" Foreground="#555" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Telefone" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBox x:Name="txtTelefone" FontSize="16" Foreground="#555" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="E-mail" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBox x:Name="txtEmailFuncionario" FontSize="16" Foreground="#555" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Departamento" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <ComboBox x:Name="cmbDepartamento" FontSize="16" Foreground="#555" Margin="0,2,0,0">
                            <ComboBoxItem Content="Costura"/>
                            <ComboBoxItem Content="Estamparia"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Salvar"
                                Width="120" Height="45"
                                Background="#3B82F6"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,20,0"
                                Click="BtnSalvar_Click"/>
                        <Button Content="Cancelar"
                                Width="120" Height="45"
                                Background="#E1E5ED"
                                Foreground="#2E2E2E"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnCancelar_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </ScrollViewer>

    </Grid>
</Window>
