<Window x:Class="WPF_Projeto_BD.Views.ProducaoWindown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produção" Height="650" Width="1100" Background="#F3F3F3">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock Text="Controle de Produção"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 15"
                   Grid.ColumnSpan="3"/>

        <!-- LISTA DE PEDIDOS -->
        <Border Grid.Row="1" Grid.Column="0"
                Margin="0 0 15 0"
                Padding="10"
                Background="White"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">

            <StackPanel>
                <TextBlock Text="Pedidos em Produção"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0 0 0 10"/>

                <DataGrid x:Name="dgPedidos"
                          AutoGenerateColumns="False"
                          Height="480"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          Background="White"
                          BorderThickness="0"
                          AlternatingRowBackground="#F0F0F0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                        <DataGridTextColumn Header="Produto" Binding="{Binding Produto}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Entrega" Binding="{Binding PrevEntrega}" Width="120"/>
                    </DataGrid.Columns>

                </DataGrid>
            </StackPanel>
        </Border>

        <!-- DETALHES DO PEDIDO -->
        <Border Grid.Row="1" Grid.Column="1"
                Margin="0 0 15 0"
                Padding="15"
                Background="White"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">

            <StackPanel>
                <TextBlock Text="Detalhes do Pedido Selecionado"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <Separator Margin="0 10"/>

                <StackPanel Orientation="Vertical">

                    <TextBlock Text="Cliente:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtCliente"/>

                    <TextBlock Text="Produto:"
                               FontWeight="Bold"
                               Margin="0 10 0 0"/>
                    <TextBlock x:Name="txtProduto"/>

                    <TextBlock Text="Quantidade:"
                               FontWeight="Bold"
                               Margin="0 10 0 0"/>
                    <TextBlock x:Name="txtQuantidade"/>

                    <TextBlock Text="Observações:"
                               FontWeight="Bold"
                               Margin="0 10 0 0"/>
                    <TextBox x:Name="txtObservacoes"
                             Height="80"
                             TextWrapping="Wrap"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- ETAPAS / AÇÕES -->
        <Border Grid.Row="1" Grid.Column="2"
                Padding="15"
                Background="White"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">

            <StackPanel>
                <TextBlock Text="Etapas da Produção"
                           FontSize="18"
                           FontWeight="SemiBold"/>
                <Separator Margin="0 10"/>

                <ListBox x:Name="lbEtapas" Height="300">
                    <ListBoxItem Content="Corte"/>
                    <ListBoxItem Content="Costura"/>
                    <ListBoxItem Content="Montagem"/>
                    <ListBoxItem Content="Acabamento"/>
                    <ListBoxItem Content="Embalagem"/>
                </ListBox>

                <!-- BOTÕES -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 15 0 0">

                    <Button x:Name="btnIniciar"
                            Content="Iniciar Etapa"
                            Width="120"
                            Height="35"
                            Background="#4CAF50"
                            Foreground="White"
                            Click="btnIniciar_Click"/>

                    <Button x:Name="btnConcluir"
                            Content="Concluir Etapa"
                            Width="120"
                            Height="35"
                            Background="#2196F3"
                            Foreground="White"
                            Margin="10 0 0 0"
                            Click="btnConcluir_Click"/>
                </StackPanel>

                <Button x:Name="btnFinalizarProducao"
                        Content="Finalizar Produção"
                        Height="40"
                        Background="#E53935"
                        Foreground="White"
                        Margin="0 15 0 0"
                        Click="btnFinalizarProducao_Click"/>

            </StackPanel>

        </Border>
    </Grid>
</Window>
