<Window x:Class="WPF_Projeto_BD.Views.EmpresaDados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dados da Empresa"
        Height="600" Width="800"
        Background="#F6F7FB"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="25">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Dados da Empresa"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#2E2E2E"
                       DockPanel.Dock="Left"/>

            <Button Content="⟵ Voltar"
                    Background="#E1E5ED"
                    Foreground="#2E2E2E"
                    BorderThickness="0"
                    Padding="10,5"
                    Width="100"
                    Cursor="Hand"
                    Click="BtnVoltar_Click"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White"
                    CornerRadius="12"
                    BorderBrush="#E1E5ED"
                    BorderThickness="1"
                    Padding="30"
                    Width="600"
                    HorizontalAlignment="Center">

                <StackPanel>

                    <TextBlock Text="Informações da Empresa"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#4A90E2"
                               Margin="0,0,0,20"/>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="CNPJ" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBlock x:Name="lblCNPJ"
                                   Text="00.000.000/0000-00"
                                   FontSize="16"
                                   Foreground="#555"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Nome Fantasia" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBlock x:Name="lblNomeFantasia"
                                   Text="Empresa Exemplo"
                                   FontSize="16"
                                   Foreground="#555"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Razão Social" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBlock x:Name="lblRazaoSocial"
                                   Text="Empresa Exemplo LTDA"
                                   FontSize="16"
                                   Foreground="#555"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Email" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBlock x:Name="lblEmail"
                                   Text="empresa@email.com"
                                   FontSize="16"
                                   Foreground="#555"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Telefone" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBlock x:Name="lblTelefone"
                                   Text="(00) 00000-0000"
                                   FontSize="16"
                                   Foreground="#555"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Endereço" FontSize="14" FontWeight="Bold" Foreground="#3A3A3A"/>
                        <TextBlock x:Name="lblEndereco"
                                   Text="Rua Exemplo, 123 - Centro"
                                   FontSize="16"
                                   Foreground="#555"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <Button Content="Editar Empresa"
                            Width="200" Height="45"
                            Background="#3B82F6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Click="BtnEditar_Click"/>
                </StackPanel>

            </Border>
        </ScrollViewer>

    </Grid>
</Window>
