<Window x:Class="WPF_Projeto_BD.Views.EmpresaCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Empresa" Height="650" Width="682"
        Background="#F2F4F7"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Definição de linhas: Cabeçalho + Conteúdo -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Cabeçalho -->
            <RowDefinition Height="*"/>
            <!-- Conteúdo -->
        </Grid.RowDefinitions>

        <!-- ================ CABEÇALHO ================ -->
        <Border Grid.Row="0" Background="#1F2937">
            <DockPanel VerticalAlignment="Center" Margin="15,0">
                <Button Content="Home"
                        Width="120" Height="35"
                        Background="#374151"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Left" 
                        Click="BtnVoltar_Click"
                        />

                <TextBlock Text="Cadastro de Empresa"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- ================ CONTEÚDO ================ -->
        <ScrollViewer Grid.Row="1" Margin="20,20,20,20">
            <StackPanel>

                <!-- CARD DE CADASTRO DA EMPRESA -->
                <Border Background="White"
                        CornerRadius="8"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Padding="20"
                        Margin="0,0,0,20">

                    <StackPanel>
                        <TextBlock Text="Dados da Empresa"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="CNPJ:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtCNPJ" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Nome Fantasia:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtNomeFantasia" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Razão Social:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtRazaoSocial" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Email:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmailEmpresa" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Telefone:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtTelefone" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Endereço:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEndereco" Width="350"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- CARD DE ADMINISTRADOR -->
                <Border Background="White"
                        CornerRadius="8"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Padding="20"
                        Margin="0,0,0,20">

                    <StackPanel>
                        <TextBlock Text="Administrador"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Nome:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtNomeADM" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Email:" Width="150" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmailADM" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Senha:" Width="150" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="txtSenhaADM" Width="350"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Confirmar Senha:" Width="150" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="txtConfirmSenhaADM" Width="350"/>
                        </StackPanel>

                        <Button Content="Cadastrar Empresa"
                                Width="200" Height="40"
                                Background="#3B82F6"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Cursor="Hand"
                                Click="BtnCadastrar_Click"
                                />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
