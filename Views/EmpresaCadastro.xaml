<Window x:Class="WPF_Projeto_BD.Views.EmpresaCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Empresa"
        Height="650" Width="750"
        Background="#F6F7FB"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- Sombra clean -->
        <DropShadowEffect x:Key="Shadow" BlurRadius="16" ShadowDepth="2" Opacity="0.10"/>

        <!-- TextBox estilizado -->
        <Style TargetType="TextBox" x:Key="Input">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- PasswordBox estilizado -->
        <Style TargetType="PasswordBox" x:Key="InputPassword">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

    </Window.Resources>


    <Grid Margin="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========================= CABEÇALHO ========================= -->
        <Border Grid.Row="0" Background="#4A90E2" Effect="{StaticResource Shadow}">
            <DockPanel VerticalAlignment="Center" Margin="15,0">

                <Button Content="⟵  Voltar"
                        Width="120" Height="38"
                        Background="#E1E5ED"
                        Foreground="#2E2E2E"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnVoltar_Click"
                        DockPanel.Dock="Right"/>

                <TextBlock Text="Cadastro de Empresa"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </DockPanel>
        </Border>


        <!-- ========================= CONTEÚDO ========================= -->
        <ScrollViewer Grid.Row="1" Margin="25">
            <StackPanel>

                <!-- CARD: Dados da Empresa -->
                <Border Background="White"
                        CornerRadius="10"
                        Padding="25"
                        Effect="{StaticResource Shadow}"
                        Margin="0,0,0,25">

                    <StackPanel>

                        <TextBlock Text="Dados da Empresa"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#4A90E2"
                                   Margin="0,0,0,20"/>

                        <!-- LINHA 1 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="CNPJ:" Width="160" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtCNPJ" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- LINHA 2 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Nome Fantasia:" Width="160" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtNomeFantasia" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- LINHA 3 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Razão Social:" Width="160" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtRazaoSocial" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- LINHA 4 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Email:" Width="160" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmailEmpresa" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- LINHA 5 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Telefone:" Width="160" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtTelefone" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- LINHA 6 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Endereço:" Width="160" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEndereco" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                    </StackPanel>
                </Border>


                <!-- CARD: Administrador -->
                <Border Background="White"
                        CornerRadius="10"
                        Padding="25"
                        Effect="{StaticResource Shadow}">

                    <StackPanel>

                        <TextBlock Text="Administrador"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#4A90E2"
                                   Margin="0,0,0,20"/>

                        <!-- Nome -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Nome:" Width="160"/>
                            <TextBox x:Name="txtNomeADM" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Email:" Width="160"/>
                            <TextBox x:Name="txtEmailADM" Width="380" Style="{StaticResource Input}"/>
                        </StackPanel>

                        <!-- Senha -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Senha:" Width="160"/>
                            <PasswordBox x:Name="txtSenhaADM" Width="380" Style="{StaticResource InputPassword}"/>
                        </StackPanel>

                        <!-- Confirmar Senha -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Confirmar Senha:" Width="160"/>
                            <PasswordBox x:Name="txtConfirmSenhaADM" Width="380" Style="{StaticResource InputPassword}"/>
                        </StackPanel>

                        <!-- Botão Cadastrar -->
                        <Button Content="Cadastrar Empresa"
                                Width="260" Height="45"
                                Background="#4A90E2"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"
                                Cursor="Hand"
                                Click="BtnCadastrar_Click"
                                IsDefault="True"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
