<Window x:Class="WPF_Projeto_BD.Views.PedidoCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pedido"
        WindowStartupLocation="CenterScreen"
        Width="1050" Height="780"
        Background="#F3F4F6">

    <Grid>

        <!-- ============== 1) CABEÇALHO FIXO ============== -->
        <Border Background="#1F2937"
                Height="60"
                VerticalAlignment="Top"
                SnapsToDevicePixels="True">

            <DockPanel VerticalAlignment="Center" Margin="20,0">

                <!-- Botão Voltar -->
                <Button Content="Home"
                        Width="130" Height="34"
                        Background="#374151"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        DockPanel.Dock="Left"
                        Click="Voltar"/>

                <!-- Título -->
                <TextBlock Text="Cadastro de Pedido"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </DockPanel>
        </Border>


        <!-- ============== 2) ÁREA SCROLL  ============== -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Margin="0,60,0,0">

            <Grid Margin="35">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <!-- CARD -->
                <Border Background="White"
                        BorderBrush="#D1D5DB" BorderThickness="1"
                        CornerRadius="12"
                        Padding="30"
                        Margin="0 0 0 25"
                        Grid.Row="0"
                        SnapsToDevicePixels="True"
                        >
                    <StackPanel>

                        <!-- ★ SEÇÃO 1 - INFORMAÇÕES BÁSICAS -->
                        <TextBlock Text="Informações do Pedido"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0 0 0 15"
                                   Foreground="#111827"/>

                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Cliente -->
                            <StackPanel Margin="0 0 15 0">
                                <TextBlock Text="Cliente" FontSize="14" Margin="0 0 0 4"/>
                                <ComboBox Height="36" x:Name="cbCliente"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- Prazo -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Prazo de Entrega" FontSize="14" Margin="0 0 0 4"/>
                                <DatePicker Height="36" x:Name="dpEntrega"
                                            Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>
                        </Grid>


                        <!-- ★ SEÇÃO 2 - ESPECIFICAÇÕES -->
                        <TextBlock Text="Especificações Técnicas"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0 0 0 15"
                                   Foreground="#111827"/>

                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Estampa -->
                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="Tipo de Estampa" FontSize="14"/>
                                <ComboBox Height="36" x:Name="cbEstampa"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- Método -->
                            <StackPanel Margin="0 0 12 0" Grid.Column="1">
                                <TextBlock Text="Método" FontSize="14"/>
                                <ComboBox Height="36" x:Name="cbMetodo"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- Cores -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Cores" FontSize="14"/>
                                <TextBox Height="36" x:Name="txtCores"
                                         Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>
                        </Grid>

                        <!-- Tecido / Fio / Gramatura -->
                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="Tecido" FontSize="14"/>
                                <ComboBox Height="36" x:Name="cbTecido"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Margin="0 0 12 0" Grid.Column="1">
                                <TextBlock Text="Fio" FontSize="14"/>
                                <ComboBox Height="36" x:Name="cbFio"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Gramatura (g/m²)" FontSize="14"/>
                                <TextBox Height="36" x:Name="txtGramatura"
                                         Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>
                        </Grid>


                        <!-- Modelagem / Gola -->
                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Margin="0 0 12 0">
                                <TextBlock Text="Modelagem" FontSize="14"/>
                                <ComboBox Height="36" x:Name="cbModelagem"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Gola" FontSize="14"/>
                                <ComboBox Height="36" x:Name="cbGola"
                                          Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>
                        </Grid>


                        <!-- ★ SEÇÃO 3 - TAMANHOS -->
                        <TextBlock Text="Tamanhos"
           FontSize="16"
           FontWeight="Bold"
           Margin="0 0 0 15"
           Foreground="#111827"/>

                        <!-- =================== -->
                        <!-- MASCULINO -->
                        <!-- =================== -->

                        <TextBlock Text="Masculino"
           FontSize="14"
           FontWeight="SemiBold"
           Margin="0 0 0 8"
           Foreground="#444"/>

                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- P -->
                            <StackPanel Grid.Column="0" Margin="0 0 8 0">
                                <TextBlock Text="P" FontSize="13" Margin="0 0 0 3"/>
                                <TextBox x:Name="txtMP" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- M -->
                            <StackPanel Grid.Column="1" Margin="0 0 8 0">
                                <TextBlock Text="M" FontSize="13" Margin="0 0 0 3"/>
                                <TextBox x:Name="txtMM" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- G -->
                            <StackPanel Grid.Column="2" Margin="0 0 8 0">
                                <TextBlock Text="G" FontSize="13" Margin="0 0 0 3"/>
                                <TextBox x:Name="txtMG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- GG -->
                            <StackPanel Grid.Column="3" Margin="0 0 8 0">
                                <TextBlock Text="GG" FontSize="13" Margin="0 0 0 3"/>
                                <TextBox x:Name="txtMGG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <!-- XG -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="XG" FontSize="13" Margin="0 0 0 3"/>
                                <TextBox x:Name="txtMXG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>
                        </Grid>


                        <!-- =================== -->
                        <!-- FEMININO -->
                        <!-- =================== -->

                        <TextBlock Text="Feminino"
           FontSize="14"
           FontWeight="SemiBold"
           Margin="0 0 0 8"
           Foreground="#444"/>

                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0 0 8 0">
                                <TextBlock Text="P" FontSize="13"/>
                                <TextBox x:Name="txtFP" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0 0 8 0">
                                <TextBlock Text="M" FontSize="13"/>
                                <TextBox x:Name="txtFM" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0 0 8 0">
                                <TextBlock Text="G" FontSize="13"/>
                                <TextBox x:Name="txtFG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="0 0 8 0">
                                <TextBlock Text="GG" FontSize="13"/>
                                <TextBox x:Name="txtFGG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="XG" FontSize="13"/>
                                <TextBox x:Name="txtFXG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>
                        </Grid>


                        <!-- =================== -->
                        <!-- BABYLOOK -->
                        <!-- =================== -->

                        <TextBlock Text="Babylook"
           FontSize="14"
           FontWeight="SemiBold"
           Margin="0 0 0 8"
           Foreground="#444"/>

                        <Grid Margin="0 0 0 25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0 0 8 0">
                                <TextBlock Text="P" FontSize="13"/>
                                <TextBox x:Name="txtBP" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0 0 8 0">
                                <TextBlock Text="M" FontSize="13"/>
                                <TextBox x:Name="txtBM" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="G" FontSize="13"/>
                                <TextBox x:Name="txtBG" Height="32"
                 Background="#F3F4F6" BorderBrush="#C7CBD1"/>
                            </StackPanel>

                        </Grid>



                        <!-- ★ SEÇÃO 4 - OBSERVAÇÕES -->
                        <TextBlock Text="Observações"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0 0 0 15"/>

                        <TextBox x:Name="txtObs"
                                 Height="120"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 BorderBrush="#C7CBD1"
                                 Background="#F3F4F6"
                                 Padding="10"/>
                    </StackPanel>
                </Border>


                <!-- BOTÕES -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Cancelar"
                            Click="Cancelar"
                            Width="140" Height="42"
                            Background="#9CA3AF"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Margin="0 0 12 0"/>

                    <Button Content="Salvar Pedido"
                            Width="170" Height="42"
                            Background="#1D4ED8"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                </StackPanel>



            </Grid>

        </ScrollViewer>

    </Grid>

</Window>
