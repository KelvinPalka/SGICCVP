<Window x:Class="WPF_Projeto_BD.Views.PedidosLista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pedidos"
        WindowStartupLocation="CenterScreen"
        Width="1200" Height="700"
        Background="#F4F6F9">

    <Grid>

        <!-- ================= GRID PRINCIPAL ================= -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Cabeçalho -->
            <RowDefinition Height="*"/>
            <!-- Conteúdo -->
        </Grid.RowDefinitions>


        <!-- ================= CABEÇALHO ================= -->
        <Border Grid.Row="0" Background="#1F2937">
            <DockPanel VerticalAlignment="Center" Margin="15,0">

                <!-- Botão Voltar -->
                <Button Content="Home"
                        Width="120" Height="35"
                        Background="#374151"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Left"
                        Click="BtnVoltar_Click"/>

                <!-- Título -->
                <TextBlock Text="Gestão de Pedidos"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
            </DockPanel>
        </Border>



        <!-- ================= CONTEÚDO ================= -->
        <Grid Grid.Row="1" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>



            <!-- ===== BARRA DE AÇÕES E BUSCA ===== -->
            <DockPanel Grid.Row="0" LastChildFill="True" Margin="0 0 0 15">

                <!-- BOTÕES -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0 0 20 0">

                    <Button Content="＋ Novo Pedido"
                            Width="160" Height="40"
                            Background="#1976D2"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0 0 10 0"
                            Cursor="Hand"
                            Click="CadastrarPedido"/>

                    <Button Content="Editar"
                            Width="120" Height="40"
                            Background="#0288D1"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0 0 10 0"
                            Cursor="Hand"/>

                    <Button Content="Excluir"
                            Width="120" Height="40"
                            Background="#E53935"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>


                <!-- BUSCA -->
                <DockPanel LastChildFill="True">

                    <TextBox x:Name="txtBusca"
                             Height="40"
                             Background="White"
                             BorderBrush="#C4C4C4"
                             BorderThickness="1"
                             Padding="10"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Margin="0 0 10 0"
                             Width="450"
                             Text="Pesquisar por cliente, ID, status..."/>

                    <Button Content="Buscar"
                            Width="100" Height="40"
                            Background="#4B5563"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>

                </DockPanel>

            </DockPanel>




            <!-- ===== LISTA DE PEDIDOS (DATAGRID) ===== -->
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">

                <DataGrid x:Name="dgPedidos"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="36"
                          FontSize="14"
                          Background="White"
                          AlternatingRowBackground="#F9FAFB"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNome}" Width="*"/>
                        <DataGridTextColumn Header="Produto / Estampa" Binding="{Binding TipoEstampa}" Width="200"/>
                        <DataGridTextColumn Header="Tecido" Binding="{Binding Tecido}" Width="160"/>
                        <DataGridTextColumn Header="Qtd" Binding="{Binding Qntd}" Width="90"/>
                        <DataGridTextColumn Header="Entrega" Binding="{Binding DataEntrega}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusPedido}" Width="150"/>

                    </DataGrid.Columns>

                </DataGrid>

            </Border>

        </Grid>

    </Grid>
</Window>
